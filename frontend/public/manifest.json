{
    "name": "TaskMaster",
    "description": "A Chrome extension to manage tasks with RPG mechanics.",
    "version": "0.0.1",
    "manifest_version": 3,
    "icons": {
        "16": "assets/rpgui/img/icons/helmet-slot.png",
        "48": "assets/rpgui/img/icons/helmet-slot.png",
        "128": "assets/rpgui/img/icons/helmet-slot.png"
    },
    "action": {
        "default_popup": "index.html",
        "default_icon": {
            "16": "assets/rpgui/img/icons/helmet-slot.png",
            "48": "assets/rpgui/img/icons/helmet-slot.png",
            "128": "assets/rpgui/img/icons/helmet-slot.png"
        }
    },
    "permissions": [
        "storage",
        "tabs"
    ],
    "homepage_url": "https://timeless.co"
}